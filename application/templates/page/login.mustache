<div class="container" id="content">
	<div class="row">
		<div class="col-lg-12">
			<h1>{{title}}</h1>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-12">
			<div class="col-xs-4 col-xs-offset-3">
				<form role="form" class="form-horizontal" method="POST" action="/login">
				<div class="form-group">
					<label for="loginInput" class="col-sm-2 control-label"><span class="glyphicon glyphicon-user"></span></label>
					<div class="col-sm-10">
						<input type="text" class="form-control" placeholder="Login" name="login" id="loginInput">
					</div>
				</div>

				<div class="form-group">
					<label for="passInput" class="col-sm-2 control-label"><span class="glyphicon glyphicon-lock"></span></label>
					<div class="col-sm-10">
						<input type="password" class="form-control" placeholder="Password" name="pass" id="passInput">
					</div>
				</div>

				<div class="form-group">
					<div class="col-sm-offset-2 col-sm-10">
						<button type="submit" class="center-block btn btn-default">Submit</button>
					</div>
				</div>
				</form>
			</div>
		</div>
	</div>
</div>
